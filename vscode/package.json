{
    "name": "dzdbgport",
    "displayName": "DayZ Debug Port",
    "description": "Simple extension to view DayZ logs.",
    "version": "0.0.1",
    "categories": [
        "Other"
    ],
    "engines": {
        "vscode": "^1.99.1"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "dzdbgport.viewLogs",
                "title": "DayZ Debug Port: View Logs"
            },
            {
                "command": "dzdbgport.restartServer",
                "title": "DayZ Debug Port: Restart Server"
            },
            {
                "command": "dzdbgport.focusExecInput",
                "title": "DayZ Debug Port: Focus on Exec Code"
            },
            {
                "command": "dzdbgport.recompileFile",
                "title": "DayZ Debug Port: Recompile File in DayZ"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "dzdbgport.execCodeView",
                    "name": "DayZ Debug Port",
                    "type": "webview"
                }
            ]
        },
        "configuration": {
            "title": "DayZ Debug Port",
            "properties": {
                "dzdbgport.dataPath": {
                    "type": "string",
                    "default": "P:\\",
                    "description": "Path to DayZ data folder (e.g. PBO root, mission files, etc.)"
                }
            }
        },
        "colors": [
            {
                "id": "dzdbgport.loadedFileColor",
                "description": "Text color for files loaded by DayZ Debug Server",
                "defaults": {
                    "light": "#800080",
                    "dark": "#c084fc",
                    "highContrast": "#ff00ff"
                }
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "dzdbgport.recompileFile",
                    "group": "dzdbgport@1",
                    "when": "resourceExtname == .c"
                }
            ]
        },
        "keybindings": [
            {
                "command": "dzdbgport.recompileFile",
                "key": "ctrl+f7",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "build:exe": "cd ../python && python build_exe.py",
        "postinstall": "npm run build:exe && cpx ../python/dist/dzdbgport.exe ./bin/"
    },
    "devDependencies": {
        "@types/vscode": "^1.99.1",
        "@types/ws": "^8.18.1",
        "@vscode/vsce": "^3.3.2",
        "cpx": "^1.5.0",
        "typescript": "^5.2.0"
    },
    "dependencies": {
        "ws": "^8.18.1"
    }
}
